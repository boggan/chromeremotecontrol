{
    "manifest_version": 2,

    "name": "Chrome Remote Control",
    "description": "Extention to remote control chrome via web application",
    "version": "0.5.1",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "browser_action": {
        "default_icon": "assets/images/carousel_stopped.png",
        "default_title": "Start Carousel"
    },

    "background": {
        "scripts": ["config.js", "background.js"],
        "persistent": false
    },

    "permissions": [
        "tabs",
        "storage",
        "management"
    ]
}
